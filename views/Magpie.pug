extends layout

block content
  h1= title
  p Search results Magpie   
  p 
  div(class="container-fluid")
        div(class="row")
            -
                let Magpie  = [
                    {
                        "name": "Satish",
                        "color": "black" ,
                        "weight": 30
                    },
                    {
                        "name": "harsha",
                        "color": "brown" ,
                        "weight": 25
                    },
                    {
                        "name": "pranay",
                        "color": "white" ,
                        "weight": 40
                    },                   
                ]
            each v,index in Magpie  
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.weight}

  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }